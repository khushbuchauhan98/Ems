@model Data.FormModels.AmountVM
@{
    ViewData["Title"] = "Create";

}

<h1>Add Employee Salary</h1>


<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="SalaryAmount" class="control-label"></label>
                <textarea asp-for="SalaryAmount" class="form-control"></textarea>
                <span asp-validation-for="SalaryAmount" class="text-danger"></span>
               
            </div>

            <div class="form-outline mb-4">
                <label asp-for="RequestingEmployeeId" class="form-label" for="form3Example9">Select Employee</label>
                @Html.DropDownListFor(a => a.RequestingEmployeeId, new SelectList(ViewBag.Employee, "Value", "Text"), "Select Employee", new { @class = "form-control" })
              @*<select asp-for="RequestingEmployeeId" id="form3Example90" class="form-control form-control-lg" asp-items="ViewBag.Employee"></select>*@
            </div>
           @* <div class="form-outline mb-4">
                <label asp-for="RequestingEmployeeId" class="form-label" for="form3Example9">Select all</label>
                @Html.DropDownListFor(a => a.RequestingEmployeeId, new SelectList(ViewBag.cc, "Value", "Text"), "Select Employee", new { @class = "form-control" })
               
            </div>*@
            <div class="form-group">
                <input type="submit" value="Add Amount" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary btn-block" asp-action="Index">Back to List</a>
</div>

@section Scripts{
